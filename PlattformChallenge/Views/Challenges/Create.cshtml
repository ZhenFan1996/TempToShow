            </div>
            <div class="form-group">
                <label asp-for="Release_Date" class="control-label">From which day should your challenge be published?</label>
                <input asp-for="Release_Date" class="form-control" />
                <span asp-validation-for="Release_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Max_Participant" class="control-label">Maximum Participants</label>
                <input asp-for="Max_Participant" class="form-control" />
                <span asp-validation-for="Max_Participant" class="text-danger"></span>
            </div>

