@model PlattformChallenge.ViewModels.ChallengeDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Challenge Details</h1>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2 ">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bonus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bonus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Release_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Release_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Max_Participant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Max_Participant)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Available_Quota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Available_Quota)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Languages)
        </dt>
        <dd class="col-sm-10">
            @for (int i = 0; i < Model.Languages.Count; i++)
            {
                if (i < Model.Languages.Count - 1)
                {
                    <span>  @Model.Languages.ElementAt(i).DevelopmentLanguage , </span>
                }
                else
                {
                    <span>  @Model.Languages.ElementAt(i).DevelopmentLanguage </span>
                }
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Winner)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Winner_Id == null)
            {
                <span> There is no winner yet </span>
            }
            else
            {
                <span>  @Model.Winner.Name</span>
            }

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Best_Solution_Id)
        </dt>
        <dd class="col-sm-10">
            <div @{if (Model.Best_Solution_Id == null) }>There is no best solution yet </div>
        </dd>
        <dt class="col-sm-2">
           Solutions list
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Solution" asp-action="List" asp-route-c_Id="@Model.C_Id" > View </a>
        </dd>
    </dl>
</div>
<div class="container">
    <div class="row">
        @if (ViewContext.HttpContext.User.IsInRole("Programmer"))

            if (Model.Available_Quota > 0)
            {
                
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#p">
                    Take part in
                </button>

                <div class="modal fade" id="p" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel"> please confirm the conditions:  </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Your solution will be published if you win the prize.
                            </div>
                            <div class="modal-footer">
                                <a asp-action="ParticipateChallenge" asp-route-id="@Model.C_Id" class="btn btn-primary">Yes,I'm in!</a>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                            </div>
                        </div>
                    </div>
                </div>
                   
            }
            else
            {
                <p>You can't participate this challenge. There's no place anymore</p>
            }

        <div>
            @if (ViewContext.HttpContext.User.IsInRole("Company"))
            {
                <a   asp-action="Edit" asp-route-id="@Model.C_Id" class="btn btn-primary " >Edit</a>
            }
        </div>
        <div class="col-3">    <a asp-action="Index" class="btn btn-primary ">Back to List</a></div>
    </div>
</div>
