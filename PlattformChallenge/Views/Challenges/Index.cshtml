@using PlattformChallenge.Core.Model
@model PaginatedList<Challenge>
@inject IViewLocalizer Localizer
@inject IStringLocalizer<SharedResource> SharedLocalizer

@if (@Model.FirstOrDefault() != null && @Model.First().IsClose)
{
    ViewBag.Title = @Localizer["ClosedChallenges"];
    <h1>@Localizer["ClosedChallenges"]</h1>
}
else if (@Model.FirstOrDefault() != null && !@Model.First().IsClose)
{
    ViewBag.Title = @Localizer["CurrentChallenges"];
    <h1>@Localizer["CurrentChallenges"]</h1>
}
@if (ViewContext.HttpContext.User.IsInRole("Company"))
{
    <p>
        <a asp-action="Create">@Localizer["CreateChallenge"]</a>
    </p>
}
<div>
    <a asp-action="PastList">@Localizer["ShowClosedList"]</a> | <a asp-action="Index">@Localizer["ShowCurrentList"]</a>
</div>

@if (@Model.FirstOrDefault() != null)
{<form asp-action="Index" method="get">
        <div class="form-actions no-color">

            <p>
                @Localizer["FindByTitle"] <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="@Localizer["Search"]" class="btn btn-primary" /> |
                <a asp-action="Index">@Localizer["ShowFullList"]</a>
            </p>
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Localizer["Title"]
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["BonusSortParm"]">@Localizer["Prize"]</a>
                </th>
                <th>
                    @Localizer["Company"]
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Localizer["Date"]</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["QuotaSortParm"]">@Localizer["Quota"]</a>
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <a asp-controller="Challenges" asp-action="Details" asp-route-id="@item.C_Id"> @Html.DisplayFor(modelItem => item.Title) </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bonus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Release_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Max_Participant)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        @Localizer["NoChallengesInThisCategory"]
    </div>
}

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    @SharedLocalizer["Previous"]
</a>
<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    @SharedLocalizer["Next"]
</a>

